<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Route</h1>
        <div class="col-6 offset-3 mt-3">
            <form action="/problems" method="POST">
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input placeholder="Color" class="form-control" type="text" id="color" name="route[color]">
                            <label for="color">Color</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" name="route[grade]" id="grade">
                                <option selcted>--</option>
                                <option value="5.6">5.6</option>
                                <option value="5.7">5.7</option>
                                <option value="5.8">5.8</option>
                                <option value="5.9">5.9</option>
                                <option value="5.10-">5.10-</option>
                                <option value="5.10">5.10</option>
                                <option value="5.10+">5.10+</option>
                                <option value="5.11-">5.11-</option>
                                <option value="5.11">5.11</option>
                                <option value="5.11+">5.11+</option>
                                <option value="5.12-">5.12-</option>
                                <option value="5.12">5.12</option>
                                <option value="5.12+">5.12+</option>
                                <option value="5.13-">5.13-</option>
                                <option value="5.13">5.13</option>
                                <option value="5.13+">5.13+</option>
                            </select>
                            <label for="grade">Choose Grade</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input placeholder="Number of Attempts" class="form-control" type="text"
                                name="route[attempts]" id="attempts">
                            <label for="attempts">Number of Attempts</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input placeholder="Location" class="form-control" type="text" name="route[location]"
                                id="location">
                            <label for="location">Location</label>
                        </div>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="sent" name="route[sent]">
                    <label class="form-check-label" for="sent">
                        Did you send?
                    </label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Route</button>
                </div>
            </form>
            <a href="/problems">Journal</a>
        </div>
    </div>