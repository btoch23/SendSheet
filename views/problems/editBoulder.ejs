<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Boulder</h1>
        <div class="col-6 offset-3 mt-3">
            <form action="/problems/<%= boulder._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input value="<%= boulder.color %>" class="form-control" type="text" id="color"
                                name="boulder[color]">
                            <label for="color">Color</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" name="boulder[grade]" id="grade">
                                <option selcted>
                                    <%= boulder.grade %>
                                </option>
                                <option value="VB">VB</option>
                                <option value="V0">V0</option>
                                <option value="V1">V1</option>
                                <option value="V2">V2</option>
                                <option value="V3">V3</option>
                                <option value="V4">V4</option>
                                <option value="V5">V5</option>
                                <option value="V6">V6</option>
                                <option value="V7">V7</option>
                                <option value="V8">V8</option>
                                <option value="V9">V9</option>
                            </select>
                            <label for="grade">Choose Grade</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input value="<%= boulder.attempts %>" class="form-control" type="text"
                                name="boulder[attempts]" id="attempts">
                            <label for="attempts">Number of Attempts</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input value="<%= boulder.location %>" class="form-control" type="text"
                                name="boulder[location]" id="location">
                            <label for="location">Location</label>
                        </div>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="sent" name="boulder[sent]">
                    <label class="form-check-label" for="sent">
                        Did you send?
                    </label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Boulder</button>
                </div>
            </form>
            <a href="/problems">Back to Journal</a>
        </div>
    </div>