<% layout('layouts/boilerplate') %>
    <div class="container d-flex flex-column">
        <div class="container rounded mx-2 pt-2 pb-3 mb-5 bg-white">
            <h4 class="display-4 text-center">Hardest Route Flashed</h4>
            <h5 class="display-5 text-center"><strong>
                    <% if (hardestRoute===null) { %>
                        --
                        <% } else { %>
                            <%= hardestRoute.grade %>
                                <% } %>
                </strong>
            </h5>
            <div class="container d-flex justify-content-center mt-4">
                <div class="card mb-3 w-75">
                    <div style="background-color: #588157;" class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/stats/boulders">Boulders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/stats/routes">Routes</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="row g-0">
                            <% for (let arr of routesSentArr) { %>
                                <div class="col-2 mb-1 border-bottom border-black">
                                    <p class="card-text text-start"><strong>
                                            <%= arr[0] %>
                                        </strong>
                                    </p>
                                </div>
                                <div class="col-4 mb-1 border-bottom border-black">
                                    <p class="card-text text-center">
                                        <% if (arr[1][0] !==1) { %>
                                            <%= arr[1][0] %> sends
                                                <% } else { %>
                                                    <%= arr[1][0] %> send
                                                        <% } %>
                                    </p>
                                </div>
                                <div class="col-4 mb-1 border-bottom border-black">
                                    <p class="card-text text-center">
                                        <%= arr[1][1] %> flashed
                                    </p>
                                </div>
                                <div class="col-2 mb-1 border-bottom border-black">
                                    <p class="card-text text-end"><strong>
                                            <%= arr[1][2] %>%
                                        </strong>
                                    </p>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>