<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Route</h1>
        <div class="col-6 offset-3 mt-3">
            <form action="/problems/<%= route._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" name="route[color]" id="color">
                                <option selcted>
                                    <%= route.color %>
                                </option>
                                <option value="Red">Red</option>
                                <option value="Blue">Blue</option>
                                <option value="Yellow">Yellow</option>
                                <option value="Pink">Pink</option>
                                <option value="Purple">Purple</option>
                                <option value="Green">Green</option>
                                <option value="Orange">Orange</option>
                                <option value="Black">Black</option>
                                <option value="White">White</option>
                                <option value="">Other</option>
                            </select>
                            <label for="color">Color</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" name="route[grade]" id="grade">
                                <option selcted>
                                    <%= route.grade %>
                                </option>
                                <option value="5.6">5.6</option>
                                <option value="5.7">5.7</option>
                                <option value="5.8">5.8</option>
                                <option value="5.9">5.9</option>
                                <option value="5.10-">5.10-</option>
                                <option value="5.10">5.10</option>
                                <option value="5.10+">5.10+</option>
                                <option value="5.11-">5.11-</option>
                                <option value="5.11">5.11</option>
                                <option value="5.11+">5.11+</option>
                                <option value="5.12-">5.12-</option>
                                <option value="5.12">5.12</option>
                                <option value="5.12+">5.12+</option>
                                <option value="5.13-">5.13-</option>
                                <option value="5.13">5.13</option>
                                <option value="5.13+">5.13+</option>
                            </select>
                            <label for="grade">Choose Grade</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <select class="form-select" name="route[attempts]" id="grade">
                                <option selcted>
                                    <%= route.attempts %>
                                </option>
                                <option value="Onsighted">Onsighted</option>
                                <option value="Flashed">Flashed</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10+">10+</option>
                            </select>
                            <label for="attempts">Number of Attempts</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <input value="<%= route.location %>" class="form-control" type="text" name="route[location]"
                                id="location">
                            <label for="location">Location</label>
                        </div>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="sent" name="route[sent]">
                    <label class="form-check-label" for="sent">
                        Did you send?
                    </label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Route</button>
                </div>
            </form>
            <div class="d-flex justify-content-between align-items-center">
                <a class="text-decoration-none" href="/problems">Back to Journal</a>
                <form action="/problems/<%= route._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger">Delete Route</button>
                </form>
            </div>
        </div>
    </div>