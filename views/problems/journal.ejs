<% layout('layouts/boilerplate') %>
    <div class="container d-flex justify-content-center">
        <h5 class="display-5">
            Today's Date: <%= date %>
        </h5>
    </div>
    <div class="container d-flex justify-content-center mb-3">
        <div class="container w-50 d-flex justify-content-center mt-3">
            <a class="btn btn-primary me-3" href="/problems/newBoulder">Log Boulder</a>
            <a class="btn btn-success ms-3" href="/problems/newRoute">Log Route</a>
        </div>
    </div>
    <div class="container d-flex flex-column flex-md-row">
        <div class="container md-6 mb-3" id="sendContainer">
            <h1 class="display-4 text-center">Problems Sent Today</h1>
            <div class="container rounded bg-body-secondary d-flex justify-content-center mt-3">
                <div class="container d-flex flex-column align-items-center">
                    <% for (let boulder of boulders) { %>
                        <% if (boulder.sent && boulder.date===date) { %>
                            <div class="row w-75 rounded text-white bg-primary border border-black pt-3 my-2">
                                <div class="col-md-4 text-center">
                                    <p>
                                        <strong>
                                            <%= boulder.title %>
                                        </strong>
                                    </p>
                                </div>
                                <div class="col-md-4 text-center">
                                    <p>
                                        <em>
                                            <%= boulder.location %>
                                        </em>
                                    </p>
                                </div>
                                <div class="col-md-4 text-center">
                                    <p>
                                        <% if (boulder.attempts==='Flashed' || boulder.attempts==='Onsighted' ) { %>
                                            <%= boulder.attempts %>
                                                <% } else { %>
                                                    <%= boulder.attempts %> attempts
                                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                                <% } %>
                                    <% for (let route of routes) { %>
                                        <% if (route.sent && route.date===date) { %>
                                            <div
                                                class="row w-75 rounded bg-success text-white border border-black pt-3 my-2">
                                                <div class="col-md-4 text-center">
                                                    <p>
                                                        <strong>
                                                            <%= route.title %>
                                                        </strong>
                                                    </p>
                                                </div>
                                                <div class="col-md-4 text-center">
                                                    <p>
                                                        <em>
                                                            <%= route.location %>
                                                        </em>
                                                    </p>
                                                </div>
                                                <div class="col-md-4 text-center">
                                                    <p>
                                                        <%= route.attempts %> attempts
                                                    </p>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% } %>
                </div>
            </div>
        </div>
        <div class="container md-6 mb-3">
            <h1 class="display-4 text-center">Ongoing Projects</h1>
            <div class="container rounded bg-body-secondary d-flex justify-content-center mt-3">
                <div class="container d-flex flex-column align-items-center">
                    <% for (let boulder of boulders) { %>
                        <% if (!boulder.sent) { %>
                            <div style="width: 85%"
                                class="row rounded text-white bg-primary border border-black ps-2 pt-3 my-2">
                                <div class="col-md-3 text-center">
                                    <p>
                                        <strong>
                                            <%= boulder.title %>
                                        </strong>
                                    </p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <p>
                                        <em>
                                            <%= boulder.location %>
                                        </em>
                                    </p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <p>
                                        <%= boulder.attempts %> attempts
                                    </p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <strong>
                                        <a class="text-warning text-decoration-none"
                                            href="/problems/<%= boulder._id %>/edit">Update</a>
                                    </strong>
                                </div>
                            </div>
                            <% } %>
                                <% } %>
                                    <% for (let route of routes) { %>
                                        <% if (!route.sent) { %>
                                            <div style="width: 85%"
                                                class="row rounded bg-success text-white border border-black ps-2 pt-3 my-2">
                                                <div class="col-md-3 text-center">
                                                    <p>
                                                        <strong>
                                                            <%= route.title %>
                                                        </strong>
                                                    </p>
                                                </div>
                                                <div class="col-md-3 text-center">
                                                    <p>
                                                        <em>
                                                            <%= route.location %>
                                                        </em>
                                                    </p>
                                                </div>
                                                <div class="col-md-3 text-center">
                                                    <p>
                                                        <%= route.attempts %> attempts
                                                    </p>
                                                </div>
                                                <div class="col-md-3 text-center">
                                                    <strong>
                                                        <a class="text-warning text-decoration-none"
                                                            href="/problems/<%= route._id %>/edit">Update</a>
                                                    </strong>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% } %>
                </div>
            </div>
        </div>
    </div>